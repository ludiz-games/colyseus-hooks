{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["../../packages/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "build"]
}
